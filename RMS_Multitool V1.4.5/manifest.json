{
  "manifest_version": 3,
  "name": "RMS Multitool",
  "version": "1.4.5",
  "description": "Multi-store stock checker, quote & crew dashboards, and quote mute system for Current RMS.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://alvgroup.current-rms.com/*"],
      "all_frames": true,
      "js": ["content.js", "quote-mute.js"]
    }
  ],
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://alvgroup.current-rms.com/*",
    "https://api.current-rms.com/*",
    "https://api.emailjs.com/*",
    "https://raw.githubusercontent.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "RMS Multitool Settings"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "services-dashboard.html"],
      "matches": ["https://*.current-rms.com/*"]
    }
  ]
}
